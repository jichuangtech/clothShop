/* editAddress.wxss */
.address-info .address-item{
  background-color: #fff;
  border-bottom: 1px solid rgba(0,0,0,.07);
  font-size: 14px;
  padding: 10px;
}
.address-item::-webkit-input-placeholder{
  color: #ddd;
}
.set-default{
  background-color: #fff;
  margin-bottom: 15px;
  padding: 10px;
  vertical-align: middle;
}
.select-radio{
  margin-left: 10px;
}
.save-btn{
  position: absolute;
  bottom: 30px;
  left: 5%;
  background-color: #F40;
  border-radius: 5px;
  color: #fff;
  text-align: center;
  padding: 8px 0;
  width: 90%;
}

/*插件样式  */
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  z-index: 1;
  top:0;
}

.citybody {
  position: fixed;
  bottom: 0px;
  z-index: 2;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  height: 100px;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}