.wrapper{
  font-size:14px;
}
.wrapper-top{
  height: 150px;
}
.product-info{
  background-color: #fff;
  line-height: 1.6;
  padding: 10px 15px;
}
.product-info .product-price{
  color:#F40;
}
.product-info .product-num{
  color: #8d8d8d
}
.product-info .remain-num{
  min-width:100px;
}
.choose-colors{
  background-color: #fff;
  border-bottom: 1px solid #ddd;
  margin-top: 5px;
  padding: 10px 15px;
  position: relative;
}
.choose-colors:after{
  position: absolute;
  content: "";
  height: 8px;
  width: 8px;
  border: 1px solid transparent;
  border-bottom-color: #969696;
  border-right-color: #969696;
  right: 15px;
  top:13px;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}
.product-detail {
  margin-top: 30px;
}
.product-detail .detail-title{
  border-bottom: 1px solid #ddd;
  margin: 0 auto;
  margin-bottom: 20px;
  height: 1px;
  position: relative;
  width: 200px;
}
.product-detail .detail-title:after{
  background-color: #f4f5f7;
  position:absolute;
  content: "商品详情";
  left: 50%;
  top:50%;
  padding: 0 15px;
  -webkit-transform: translate(-50%,-50%);
          transform: translate(-50%,-50%);

}
.product-detail image{
  height: 120px;
  margin-bottom: 5px;
}
.btns{
  color: #fff;
  height: 40px;
  line-height: 40px;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
}
.btns .car-btn{
  background-color: #fe7000;
}
.btns .buy-btn{
  background-color: #F40;
}

/*弹框  */
.choose-dialog{
    background: rgba(0, 0, 0, 0.62);
    height: 100%;
    font-size: 14px;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 4;
}
.dialog-wrapper{
  background-color: #fff;
  font-size: 14px;
  height: 350px;
  padding: 0 10px;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index:5;
}
.dialog-wrapper .dialog-item{
  border-bottom:1px solid rgba(0,0,0,.07);
  padding: 10px 0;
}
.dialog-wrapper .dialog-top{
  position: relative;
}
.dialog-wrapper  .dialog-img{
  background-color: #fff;
  border-radius: 5px;
  border: 1px solid #ddd;
  margin-top:-15px;
  margin-right: 10px;
  padding: 1px;
  height: 70px;
  width: 70px;
}
.dialog-wrapper .dialog-top image{
  border-radius: 5px;
  height: 100%;
  width: 100%;
}
.dialog-wrapper .color-item{
  display: inline-block;
  background-color: rgba(127,127,127,0.5);
  border-radius: 5px;
  font-size: 12px;
  margin: 10px 10px 0 0;
  padding: 4px 6px;
}
.dialog-wrapper .color-item.color-active{
  background-color: #F40;
}
.dialog-wrapper  .price-type{
  margin-top: 10px;
}
.dialog-wrapper .set-num{
  text-align: center;
  width: 96px;
}
.dialog-wrapper  .set-btn{
  display: inline-block;
  font-weight: bold;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  width: 30px;
  background-color: rgba(127,127,127,0.5);
}
.dialog-wrapper  .sub-btn.unactive{
  background-color: rgba(127,127,127,0.2);
}
.dialog-wrapper .num-input{
  background-color: rgba(127,127,127,0.5);
  display: inline-block;
  margin: 0 3px;
  height: 30px;
  width: 30px;
}
.dialog-wrapper  .confirm-btn{
  position: absolute;
  bottom: 0;
  background-color: #fe7000;
  color: #fff;
  height:40px;
  line-height:40px;
  text-align: center;
  left: 0;
  right: 0;
}
