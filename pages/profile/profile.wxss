.wrapper{
  color:#000;
}
.wrapper-top{
  background-color: #fff;
  border-bottom:1px solid #e5e5e5;
  margin-bottom: 20rpx;
  padding: 99.306rpx 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160.417rpx;
  height: 160.417rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  margin-top: 10px;
}
.content-item{
  background-color: #fff;
  border-bottom:1px solid #e5e5e5;
  border-top:1px solid #e5e5e5;
  color: #000;
  font-size: 14px;
  padding: 15px 20px;
  position: relative;
}
.check-more{
  padding-right: 5px;
  color: #666;
}
.order-status{
  background-color: #fff;
  border-top:1px solid #e5e5e5;
  border-bottom:1px solid #e5e5e5;
  color: #333;
  font-size: 12px;
  margin: 18rpx 0;
  padding: 10px 30px;
}
.order-status image{
  display: block;
  margin:0 auto 5px;
  height: 25px;
  width: 25px;

}
.order-status image.car-image{
  width: 28px
}
.service-item{
  margin-bottom: 10rpx;
  position: relative;
  text-align: left;
}
.content-item::after{
 position: absolute;
 content: "";
 right: 15px;
 top: 50%;
 border-top:1px solid #c8c8c8; 
 border-right:1px solid #c8c8c8; 
 height:8px;
 width:8px;
 -webkit-transform: rotate(45deg) translateY(-50%);
          transform: rotate(45deg) translateY(-50%);
} 
