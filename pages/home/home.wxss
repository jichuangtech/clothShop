/**home.wxss**/
.swiper-wrapper {
  width: 100%;
  height:150px;
  border-top:1px solid #e5e5e5;
}
.swiper-wrapper navigator{
  height: 100%;
  width: 100%;
}

.product-menu {
  background-color: #fff;
  border-top:1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  margin: 27.777rpx 0;
  min-height: 80px;
  padding-top: 18px;
  width: 100%;
}
.product-menu .menu-icon {
  border-radius: 50%;
}

.hot-product{
  background-color: #f4f5f7;
  padding: 0 27.777rpx;
  padding-bottom: 30px;
}
.hot-product .hot-item{ 
  display: inline-block;
  margin-bottom: 8px;
  width: 47.5%;
}
.hot-product .hot-item:nth-child(odd){ 
  margin-right: 3%;
}
.hot-product .item-img{
  display: block;
  height: 110px;
}
.hot-product  .item-desc{
  color: #383838;
  font-size: 23.208rpx;
  margin: 10px 0 5px;
}
.hot-product .item-price text{ 
  display: inline-block;
  font-size: 21.271rpx;
  margin-right: 5px;
}